<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="mdl.admob.class">MDL\AdmobBundle\AdMob</parameter>
        <parameter key="mdl.kernel.listener.cookie.class">MDL\AdmobBundle\EventListener\CookieListener</parameter>
        <parameter key="mdl.admob.twig.extension.class">MDL\AdmobBundle\Twig\Extension\MDLAdmobExtension</parameter>
    </parameters>

    <services>
        <service id="mdl.admob" class="%mdl.admob.class%">
            <argument type="service" id="session" />
            <argument>%mdl.admob.publisher_id%</argument>
            <argument>%mdl.admob.analytics_id%</argument>
            <argument>%mdl.admob.ad_request%</argument>
            <argument>%mdl.admob.analytics_request%</argument>
            <argument>%mdl.admob.test_mode%</argument>
            <argument>%mdl.admob.options%</argument>
        </service>

        <service id="mdl.admob.twig.extension" class="%mdl.admob.twig.extension.class%" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="mdl.admob" />
        </service>

        <service id="mdl.kernel.listener.cookie" class="%mdl.kernel.listener.cookie.class%">
            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
            <argument type="service" id="mdl.admob" />
        </service>
    </services>
</container>