<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="androirc.twig.extension.class">MDL\AndroBundle\Twig\Extension\AndroExtension</parameter>
        <parameter key="androirc.kernel.listener.mobileversion.class">MDL\AndroBundle\EventListener\MobileVersionListener</parameter>
        <parameter key="androirc.kernel.listener.interactive.login.class">MDL\AndroBundle\EventListener\InteractiveLoginListener</parameter>
    </parameters>

    <services>
        <service id="androirc.twig.extension" class="%androirc.twig.extension.class%" public="false">
            <argument type="service" id="router" />
            <argument type="service" id="session" />
            <tag name="twig.extension" />
        </service>

        <!-- Listeners -->
        <service id="androirc.kernel.listener.mobileversion" class="%androirc.kernel.listener.mobileversion.class%">
            <argument type="service" id="session" />
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
        </service>

        <service id="androirc.kernel.listener.interactive.login" class="%androirc.kernel.listener.interactive.login.class%">
            <argument type="service" id="doctrine" />
            <tag name="kernel.event_listener" event="security.interactive_login" method="onSecurityInteractiveLogin" />
        </service>

        <!-- Twig Extensions -->
        <service id="twig.extension.text" class="Twig_Extensions_Extension_Text">
            <tag name="twig.extension" />
        </service>
    </services>
</container>