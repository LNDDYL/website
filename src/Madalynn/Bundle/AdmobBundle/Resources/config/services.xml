<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="madalynn.admob.class">Madalynn\Bundle\AdmobBundle\Admob</parameter>
        <parameter key="madalynn.admob.twig.extension.class">Madalynn\Bundle\AdmobBundle\Twig\Extension\MadalynnAdmobExtension</parameter>
    </parameters>

    <services>
        <service id="madalynn.admob" class="%madalynn.admob.class%">
            <argument>%madalynn.admob.publisher_id%</argument>
            <argument>%madalynn.admob.test_mode%</argument>
            <argument>%madalynn.admob.bgcolor%</argument>
            <argument>%madalynn.admob.textcolor%</argument>
        </service>

        <service id="madalynn.admob.twig.extension" class="%madalynn.admob.twig.extension.class%" public="false">
            <tag name="twig.extension" />
            <argument type="service" id="madalynn.admob" />
        </service>
    </services>
</container>
