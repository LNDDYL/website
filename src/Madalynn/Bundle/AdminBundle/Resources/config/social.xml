<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="twitter.oauth.class">OAuth\TwitterOauth</parameter>
        <parameter key="androirc.twitter.class">Madalynn\Bundle\AdminBundle\Social\Twitter</parameter>
    </parameters>

    <services>
        <!-- Twitter -->
        <service id="androirc.twitter" class="%androirc.twitter.class%">
            <argument type="service" id="twitter.oauth" />
        </service>

        <service id="twitter.oauth" class="%twitter.oauth.class%">
            <argument>%twitter_consumer_key%</argument>
            <argument>%twitter_consumer_secret%</argument>
            <argument>%twitter_oauth_token%</argument>
            <argument>%twitter_oauth_token_secret%</argument>
        </service>
    </services>
</container>
