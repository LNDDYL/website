{% extends "AdminBundle:Base:list.html.twig" %}

{% block content %}
  <table class="records_list">
        <thead>
            <tr>
                <th>{{ 'quick_start.field.language'|trans }}</th>
                <th>{{ 'quick_start.field.version_min'|trans }}</th>
                <th>{{ 'quick_start.field.version_max'|trans }}</th>
                <th width="210px;">{{ 'actions.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pager %}
            <tr>
                <td style="text-align: center">{{ entity.language }}</td>
                <td style="text-align: center">{{ entity.versionMin }}</td>
                <td style="text-align: center">{{ entity.versionMax|default('quick_start.field.version_none'|trans) }}</td>
                <td>
                    <ul>
                        <li>
                            <img src="{{ asset('bundles/andro/images/icons/page.png') }}" /> <a href="{{ path('admin_quick_start_show', { 'id': entity.id }) }}">{{ 'actions.show'|trans }}</a>
                        </li>
                        <li>
                            <img src="{{ asset('bundles/andro/images/icons/page_edit.png') }}" /> <a href="{{ path('admin_quick_start_edit', { 'id': entity.id }) }}">{{ 'actions.edit'|trans }}</a>
                        </li>
                        <li>
                            <img src="{{ asset('bundles/andro/images/icons/cross.png') }}" /> <a onclick="return confirm('Are you sure?')" href="{{ path('admin_quick_start_delete', { 'id': entity.id }) }}">{{ 'actions.delete'|trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}