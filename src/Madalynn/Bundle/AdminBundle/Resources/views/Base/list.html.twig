{% extends "AdminBundle::backend.html.twig" %}

{% block page %}
    {% if filter_form.count > 1 %}
        <div id="filter-a">
            <a href="{{ path('admin_' ~ entity_name ~ '_clear') }}" class="btn btn-danger">{{ 'actions.clear_filters'|trans }}</a>
            <a id="filter-results" href="javascript:;" class="btn btn-info">{{ 'actions.filter'|trans }}</a>
        </div>
    {% endif %}

    <h1>{{ block('title') }}</h1>

    {% if filter_form.count > 1 %}
        <div id="filter">
            <form class="form-horizontal" action="{{ path('admin_' ~ entity_name ~ '_filter') }}" method="post" {{ form_enctype(filter_form) }}>
                {{ form_widget(filter_form) }}
                <div class="actions">
                    <button type="submit" class="btn btn-primary">{{ 'actions.filter_button'|trans }}</button>
                </div>
            </form>
        </div>
    {% endif %}

    {% block content %}{% endblock %}

    <div id="entity_actions">
        {% block entity_actions %}
            <a class="btn btn-success" href="{{ path('admin_' ~ entity_name ~ '_new') }}">
                {{ 'actions.create_entry'|trans }}
            </a>
        {% endblock %}
    </div>

    <div class="clear"></div>

    <div class="paginator">
        {{ pagerfanta(pager) }}
    </div>
{% endblock %}