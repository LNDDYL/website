{% extends "AdminBundle:Base:list.html.twig" %}

{% block content %}
    <table class="records_list">
        <thead>
            <tr>
                <th>{{ 'article.field.title'|trans }}</th>
                <th>{{ 'article.field.visible'|trans }}</th>
                <th>{{ 'article.field.author'|trans }}</th>
                <th>{{ 'article.field.created'|trans }}</th>
                <th width="160px;">{{ 'actions.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in pager %}
            <tr>
                <td><a href="{{ path('admin_article_show', {'id' : entity.id}) }}">{{ entity.title }}</a></td>
                <td style="text-align: center">
                    {% if (entity.visible) %}
                        <img src="{{ asset('bundles/andro/images/icons/tick.png') }}" />
                    {% else %}
                        <img src="{{ asset('bundles/andro/images/icons/cross.png') }}" />
                    {% endif %}
                </td>
                <td style="text-align: center">{{ entity.author }}</td>
                <td style="text-align: center">{{ entity.created|date('m/d/Y') }}</td>
                <td>
                    <ul>
                        <li>
                            <img src="{{ asset('bundles/andro/images/icons/page_edit.png') }}" /> <a href="{{ path('admin_article_edit', {'id': entity.id}) }}">{{ 'actions.edit'|trans }}</a>
                        </li>
                        <li>
                            <img src="{{ asset('bundles/andro/images/icons/cross.png') }}" /> <a onclick="return confirm('Are you sure?')" href="{{ path('admin_article_delete', { 'id': entity.id }) }}">{{ 'actions.delete'|trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
