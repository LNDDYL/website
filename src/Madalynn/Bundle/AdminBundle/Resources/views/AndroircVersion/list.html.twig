{% extends "AdminBundle:Base:list.html.twig" %}

{% block title %}AndroIRC versions{% endblock %}

{% block content %}
  <table class="records_list">
        <thead>
            <tr>
                <th>Code</th>
                <th>Version</th>
                <th width="160px;">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pager %}
            <tr>
                <td style="text-align: center">{{ entity.code }}</td>
                <td style="text-align: center">{{ entity }}</td>
                <td>
                    <ul>
                        <li>
                            <img src="{{ asset('bundles/andro/images/icons/page_edit.png') }}" /> <a href="{{ path('admin_tip_edit', { 'id': entity.id }) }}">{{ 'actions.edit'|trans }}</a>
                        </li>
                        <li>
                            <img src="{{ asset('bundles/andro/images/icons/cross.png') }}" /> <a onclick="return confirm('Are you sure?')" href="{{ path('admin_tip_delete', { 'id': entity.id }) }}">{{ 'actions.delete'|trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}