<article>
    <div class="header">
        <div class="avatar">
            <img src="{{ gravatar(article.author.email) }}" />
        </div>
        <div class="informations">
            <div class="title">
                {% if sumup %}
                    <a href="{{ andro_url_article(article) }}">{{ article.title }}</a>
                {% else %}
                    {{ article.title }}
                {% endif %}
                {% if not article.visible %}(not visible){% endif %}
            </div>
            <div class="subtitle">
                {{ article.created|date('m/d/Y') }} | News posted by {{ article.author }} | <a href="{{ andro_url_article(article) }}#disqus_thread" data-disqus-identifier="{{ article.id }}">0 comment</a>
                {% if app.user and app.user.admin %}
                    | <a href="{{ path('admin_article_edit', { 'id': article.id }) }}">edit</a>
                {% endif %}
            </div>
        </div>
        <div style="clear: left;"></div>
    </div>
    <section class="content">
        {% if sumup %}
            {{ article.content|striptags|truncate(300)|raw }}
        {% else %}
            {{ article.content|raw }}
        {% endif %}
    </section>
</article>