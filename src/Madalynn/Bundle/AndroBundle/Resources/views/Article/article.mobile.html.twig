<article {%- if not article.visible %} class="not-visible"{% endif %}>
    <div class="header">
        <div class="avatar">
            <img src="{{ gravatar(article.author.email) }}" />
        </div>
        <div class="informations">
            <div class="title">
                {% if sumup %}
                    <a href="{{ article_url(article) }}">{{ article.title }}</a>
                {% else %}
                    {{ article.title }}
                {% endif %}
                {% if not article.visible %}({{ 'article.not_visible'|trans }}){% endif %}
            </div>
            <div class="subtitle">
                {{ article.created|date('article.date_format'|trans) }} | {{ 'article.posted_by'|trans({'%name%': article.author}) }} | <a href="{{ article_url(article) }}#disqus_thread" data-disqus-identifier="{{ article.id }}">0 comment</a>
                {% if app.user and app.user.admin %}
                    | <a href="{{ path('admin_article_edit', { 'id': article.id }) }}">{{ 'article.edit'|trans }}</a>
                {% endif %}
            </div>
        </div>
        <div style="clear: left;"></div>
    </div>
    <section class="content">
        {% if sumup %}
            {{ article.content|striptags|truncate(300)|raw }}
        {% else %}
            {{ article.content|raw }}
        {% endif %}
    </section>
</article>