{% extends "AndroBundle::layout.html.twig" %}

{% block stylesheets %}
    {% stylesheets filter="?yui_css" output="css/frontend.css"
        '@AndroBundle/Resources/public/css/reset.css'
        '@AndroBundle/Resources/public/css/common.css'
        '@AndroBundle/Resources/public/css/design.css'
        '@AndroBundle/Resources/public/css/front.css'
        '@AndroBundle/Resources/public/css/form.css'
        '@AndroBundle/Resources/public/css/tipsy.css'
    %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('bundles/andro/js/jquery.tipsy.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/andro/js/androirc.js') }}"></script>
{% endblock %}

{% block header %}
     <div id="ads">
        <script type="text/javascript">
            google_ad_client = "pub-1704888906932150";
            google_ad_slot = "8016140658";
            google_ad_width = 468;
            google_ad_height = 60;
        </script>
        <script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
        </script>
    </div>
{% endblock %}

{% block menu %}
     <ul>
        <li><a href="{{ path('homepage') }}">News</a></li>
        <li><a href="http://wiki.androirc.com/">Wiki</a></li>
        <li><a href="{{ path('screenshots') }}">Screenshots</a></li>
        <li><a href="{{ path('contact') }}">Contact</a></li>
        <li><a href="{{ path('beta') }}">Beta</a></li>
        <li><a href="http://market.android.com/details?id=com.androirc">Download</a></li>
        <li><a href="{{ path('eula') }}">EULA</a></li>
        <li class="last"><a href="{{ path('donate') }}">Donate</a></li>
    </ul>
{% endblock %}

{% block page %}
    <div id="sidebar">
    {% if app.user and app.user.admin %}
        <div class="sidebar_box">
            <h2>Administration</h2>

            <div class="center">
                <a href="{{ path('admin_dashboard') }}" class="awesome">Go to the administration center</a>
            </div>
        </div>
    {% endif %}
    {% if andro_from_mobile() %}
        <div class="sidebar_box">
            <h2>Mobile version</h2>

            <div class="center">
                {{ andro_switch_version(app.request) }}
            </div>
        </div>
    {% endif %}
        <div class="sidebar_box">
            <h2>Android Market</h2>

            <p>You can download AndroIRC directly from the Android Market or scan one of the following barcodes :</p>

            <div class="center">
                <img src="{{ asset('bundles/andro/images/qrcode.png') }}" />

                <form action="https://www.paypal.com/cgi-bin/webscr" method="post">
                    <input type="hidden" name="cmd" value="_s-xclick" />
                    <input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----" />
                    <input type="image" src="https://www.paypal.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!" />
                    <img alt="" border="0" src="https://www.paypal.com/fr_FR/i/scr/pixel.gif" width="1" height="1" />
                </form>
            </div>
        </div>

        <div class="sidebar_box">
            <h2>AndroIRC Team</h2>

            <div id="team_box">
                <div class="member">
                    <a href="http://twitter.com/aerialls" title="aerialls Twitter">
                        <img src="{{ gravatar('mewt@madalynn.eu') }}" class="tooltip" title="Julien Brochet"/>
                    </a>
                </div>
                <div class="member">
                    <a href="http://twitter.com/blinkseb" title="blinkseb Twitter">
                        <img src="{{ gravatar('blinkseb@madalynn.eu') }}" class="tooltip" title="SÃ©bastien Brochet"/>
                    </a>
                </div>
                <div class="member">
                    <a href="http://twitter.com/MaxxMx" title="MaxxMx Twitter">
                        <img src="{{ gravatar('maxxmaury@gmail.com') }}" class="tooltip" title="Maxx Maury"/>
                    </a>
                </div>
                <div style="clear: left;"></div>
            </div>
        </div>

        <div class="sidebar_box">
            <h2>Facebook</h2>

            <div id="facebook">
                <iframe src="http://www.facebook.com/plugins/likebox.php?href=http%3A%2F%2Fwww.facebook.com%2Fandroirc&amp;width=220&amp;colorscheme=light&amp;show_faces=false&amp;border_color&amp;stream=false&amp;header=false&amp;height=62" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:220px; height:62px;" allowTransparency="true"></iframe>
            </div>
        </div>
    </div>

    <div id="content">
        {% block content %}{% endblock %}
    </div>
{% endblock %}