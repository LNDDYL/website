{% extends "AndroBundle:Article:layout.html.twig" %}

{% block title %}Archives{% endblock %}

{% block content %}
    <h2>Articles archive</h2>
    
    <div class="paginator">
        {{ pagerfanta(pager) }}
    </div>

    {% for article in pager %}
        {% include 'AndroBundle:Article:article.html.twig' with { 'article': article, 'sumup': true } %}
    {% else %}
        No articles at this time
    {% endfor %}

    <div class="paginator">
        {{ pagerfanta(pager) }}
    </div>
{% endblock %}