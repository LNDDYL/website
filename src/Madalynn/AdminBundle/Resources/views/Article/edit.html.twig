{% extends "AdminBundle::backend.html.twig" %}

{% block content %}
    <h1>"{{ entity.title }}" article</h1>

    <form action="{{ path('admin_article_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a class="awesome" href="{{ path('admin_article') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a class="awesome" href="{{ path('admin_article_delete', { 'id': entity.id }) }}" onclick="return confirm('Are you sure?')">
                Delete
            </a>
        </li>
    </ul>
{% endblock %}