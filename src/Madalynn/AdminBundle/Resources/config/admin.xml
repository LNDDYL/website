<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Article -->
        <parameter key="androirc.admin.article.class">Madalynn\AdminBundle\Admin\ArticleAdmin</parameter>
        <parameter key="androirc.admin.article.controller">AdminBundle:Article</parameter>
        <parameter key="androirc.admin.article.entity">Madalynn\AndroBundle\Entity\Article</parameter>

        <!-- Donator -->
        <parameter key="androirc.admin.donator.class">Madalynn\AdminBundle\Admin\DonatorAdmin</parameter>
        <parameter key="androirc.admin.donator.controller">AdminBundle:Donator</parameter>
        <parameter key="androirc.admin.donator.entity">Madalynn\AndroBundle\Entity\Donator</parameter>
    </parameters>

    <services>
        <!-- Article -->
        <service id="androirc.admin.article" class="%androirc.admin.article.class%">
            <tag name="sonata.admin" manager_type="orm" group="AndroIRC" label="Article" show_in_dashboard="true" />
            <argument />
            <argument>%androirc.admin.article.entity%</argument>
            <argument>%androirc.admin.article.controller%</argument>
            <call method="setSecurityContext">
                <argument type="service" id="security.context" />
            </call>
        </service>

        <!-- Donator -->
        <service id="androirc.admin.donator" class="%androirc.admin.donator.class%">
            <tag name="sonata.admin" manager_type="orm" group="AndroIRC" label="Donator" show_in_dashboard="true" />
            <argument />
            <argument>%androirc.admin.donator.entity%</argument>
            <argument>%androirc.admin.donator.controller%</argument>
        </service>
    </services>
</container>